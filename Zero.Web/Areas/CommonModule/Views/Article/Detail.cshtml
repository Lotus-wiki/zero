@{
    ViewBag.Title = "文章表》明细页面";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
<script type="text/javascript">
    $(function () {
        InitControl();
    })
    //得到一个对象实体
    function InitControl() {
        if (!!GetQuery('KeyValue')) {
            AjaxJson("/CommonModule/Article/SetForm", { KeyValue: GetQuery('KeyValue') }, function (data) {
                SetWebControls(data);
            });
        }
    }
</script>
<form id="form1" style="margin: 1px">
    <table class="form">
        <tr>
            <th class='formTitle'>标题：</th>
            <td class='formValue'>
                <label id="Title" />
            </td>
            <th class='formTitle'>作者：</th>
            <td class='formValue'>
                <label id="Author" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>详细内容：</th>
            <td class='formValue'>
                <label id="Content" />
            </td>
            <th class='formTitle'>添加时间：</th>
            <td class='formValue'>
                <label id="CreateDate" />
            </td>
        </tr>
        <tr>
        </tr>
    </table>
</form>
