@{
    ViewBag.Title = "文章表》表单页面";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
<script type="text/javascript">
    var KeyValue = GetQuery('KeyValue');//主键
    $(function () {
        InitControl();
    })
    //得到一个对象实体
    function InitControl() {
        if (!!GetQuery('KeyValue')) {
            AjaxJson("/CommonModule/Article/SetForm", { KeyValue: KeyValue }, function (data) {
                SetWebControls(data);
            });
        }
    }
    //保存事件
    function AcceptClick() {
        if (!CheckDataValid('#form1')) {
            return false;
        }
        var postData = GetWebControls("#form1");
        AjaxJson("/CommonModule/Article/SubmitForm?KeyValue=" + KeyValue, postData, function (data) {
            tipDialog(data.Message, 3, data.Code);
            top.frames[tabiframeId()].windowload();
            closeDialog();
        });
    }
</script>
<form id="form1" style="margin: 1px">
    <div id="message" style="display: none"></div>
    <table class="form">
        <tr>
            <th class='formTitle'>标题：</th>
            <td class='formValue'>
                <input id="Title" maxlength=50 type="text" class="txt required" datacol="yes" err="标题" checkexpession="NotNull"  />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>作者：</th>
            <td class='formValue'>
                <input id="Author" maxlength=50 type="text" class="txt"   />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>内容：</th>
            <td class='formValue'>
                <textarea id="Content" maxlength=2147483647 class="txtArea"></textarea> 
            </td>
        </tr>
        <tr>
            <th class='formTitle'>发布时间：</th>
            <td class='formValue'>
                <input id="CreateDate" maxlength=23 type="text" class="txt Wdate"   />
            </td>
        </tr>
        <tr>
        </tr>
    </table>
</form>
